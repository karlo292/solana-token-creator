<%- include("partials/header") %>

<div class="container mx-auto p-4 flex justify-center">
  <div class="bg-gray-800 p-8 rounded-lg shadow-lg mt-6 w-[90%] md:w-[500px]">
    <h2 class="text-2xl font-bold text-white mb-6">Configuration</h2>
    <form action="/config-updated" method="POST" class="space-y-6">
      <div>
        <label for="solanaNetwork" class="block text-sm font-medium text-gray-300">Solana Network</label>
        <select id="solanaNetwork" name="solanaNetwork" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-600 bg-gray-700 text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
            <option value="mainnet-beta" class="bg-gray-700 text-white">Mainnet</option>
            <option value="testnet" class="bg-gray-700 text-white">Testnet</option>
        </select>
      </div>
      <div>
        <label for="walletPrivateKey" class="block text-sm font-medium text-gray-300">Wallet Private Key</label>
        <input type="text" id="walletPrivateKey" name="walletPrivateKey" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm" placeholder="Must be a string!">
      </div>
      <div>
        <button type="submit" class="w-full inline-flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Update Config
        </button>
      </div>
    </form>
  </div>
</div>

<script>
    document.getElementById("solanaNetwork").value = "<%= solana_network %>";
    document.getElementById("walletPrivateKey").value = "<%= wallet_private_key %>";


</script>

<%- include("partials/footer") %>