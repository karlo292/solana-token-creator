<%- include("partials/header") %>

<div class="container mx-auto p-4">
    <div id="tokens-container" class="bg-gray-800 shadow-lg rounded-lg p-6 mt-6">
        <h1 class="text-3xl font-bold mb-4 text-center text-white mt-1">Your Tokens</h1>
        <% if (tokensWithMintAuthority.length > 0) { %>
            <ul class="space-y-4">
                <% tokensWithMintAuthority.forEach(token => { %>
                    <li class="border-b border-gray-700 pb-4">
                        <div class="flex flex-col sm:flex-row items-center justify-between space-y-4 sm:space-y-0 sm:space-x-4">
                            <div class="flex items-center space-x-4">
                                <div class="flex-shrink-0">
                                    <img src="<%= token.logo || 'https://via.placeholder.com/50' %>" alt="<%= token.name %> logo" class="h-12 w-12 rounded-full">
                                </div>
                                <div>
                                    <p class="text-lg font-semibold text-white"><%= token.name %> (<%= token.symbol %>)</p>
                                    <p class="text-sm text-gray-300">Mint Address: <span class="text-blue-400"><%= token.mintAddress %></span></p>
                                    <p class="text-sm text-gray-300">Amount: <span class="text-green-400"><%= token.amount %></span></p>
                                </div>
                            </div>
                            <div class="w-full sm:w-auto">
                                <a href="https://explorer.solana.com/address/<%= token.mintAddress %><%= network === 'devnet' ? '?cluster=devnet' : '' %>" target="_blank" class="block sm:inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full sm:w-auto text-center">
                                    Check on Explorer
                                </a>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-gray-500 text-center">No tokens found.</p>
        <% } %>
    </div>
</div>

<%- include("partials/footer") %>