<%- include("partials/header") %>

<div class="container mx-auto p-4 justify-center flex">
    <div class="bg-gray-800 p-8 rounded-lg shadow-lg mt-6 w-full md:w-[800px]">
        <h2 class="text-3xl font-bold text-white mb-6 text-center">Token Airdrop</h2>
        
        <form action="/airdrop" method="POST" class="space-y-6">
            <div>
                <label for="mintAddress" class="block text-gray-300">Mint Address</label>
                <select id="mintAddress" name="mintAddress" class="w-full p-2 rounded bg-gray-700 text-white">
                    <% tokensWithMintAuthority.forEach(token => { %>
                        <option value="<%= token.mintAddress %>"><%= token.name %> (<%= token.symbol %>)</option>
                    <% }) %>
                </select>
            </div>
            <div>
                <label for="recipient" class="block text-gray-300">Recipient Address</label>
                <input type="text" id="recipient" name="recipient" class="w-full p-2 rounded bg-gray-700 text-white" required>
            </div>
            <div>
                <label for="amount" class="block text-gray-300">Amount</label>
                <input type="number" id="amount" name="amount" class="w-full p-2 rounded bg-gray-700 text-white" required>
            </div>
            <div class="text-center">
                <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                    Airdrop Tokens
                </button>
            </div>
        </form>
    </div>
</div>

<%- include("partials/footer") %>