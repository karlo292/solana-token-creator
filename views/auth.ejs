<%- include("partials/header") %>

<div class="container mx-auto p-4 flex justify-center">
  <div class="bg-gray-800 p-8 rounded-lg shadow-lg mt-6 w-[90%] md:w-[500px] transition-transform transform">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">Authenticate with Solana</h2>
    
    <% if (error) { %>
      <div class="bg-red-500 text-white p-3 rounded-md mb-6">
        <%= error %>
      </div>
    <% } %>
    
    <form action="/auth" method="POST" class="space-y-6">
      <div>
        <label for="privateKey" class="block text-sm font-medium text-gray-300">Solana Account Private Key</label>
        <input type="text" required id="privateKey" name="privateKey" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" placeholder="Enter your private key">
      </div>
      <div>
        <label for="network" class="block text-sm font-medium text-gray-300">Network</label>
        <select id="network" name="network" required class="mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-600 bg-gray-700 text-white focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md transition-colors duration-300 ease-in-out">
          <option value="mainnet-beta" class="bg-gray-700 text-white">Mainnet</option>
          <option value="devnet" class="bg-gray-700 text-white">Devnet</option>
        </select>
      </div>
      <div>
        <button type="submit" class="w-full inline-flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform transform hover:scale-105">
          Authenticate
        </button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer") %>