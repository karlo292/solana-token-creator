<%- include("partials/header") %>

<div class="container mx-auto p-4 justify-center flex">
    <div class="bg-white bg-opacity-10 backdrop-blur-lg p-8 rounded-lg shadow-lg mt-6 w-full border max-w-[600px] border-white border-opacity-20">
        <h2 class="text-3xl font-bold text-white mb-2 text-center">Create New Token</h2>
        <p class="text-lg text-gray-300 mb-6 text-center">Fill in the details below to create your new token on the Solana blockchain</p>
        
        <form id="tokenForm" action="/create" method="POST" class="space-y-6">
            <div>
                <label for="tokenName" class="block text-sm font-medium text-gray-300">Token Name</label>
                <input type="text" required id="tokenName" name="tokenName" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" placeholder="Enter token name">
            </div>
            <div>
                <label for="tokenSymbol" class="block text-sm font-medium text-gray-300">Token Symbol</label>
                <input type="text" required id="tokenSymbol" name="tokenSymbol" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" placeholder="Enter token symbol">
            </div>
            <div>
              <label for="tokenURI" class="block text-sm font-medium text-gray-300">Metadata URI <span class="text-gray-500">Link to metadata.json file</span></label>
              <input type="text" required id="tokenURI" name="tokenURI" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" placeholder="Enter token URI" pattern="https?://.+">
            </div>
            <div>
                <label for="tokenDecimals" class="block text-sm font-medium text-gray-300">Token Decimals <span class="text-gray-500">(0-9)</span></label>
                <input type="number" required id="tokenDecimals" name="tokenDecimals" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" placeholder="Enter token decimals" min="0" max="9">
            </div>
            <div>
                <label for="tokenInitialSupply" class="block text-sm font-medium text-gray-300">Initial Supply <span class="text-gray-500">(0-xx)</span></label>
                <input type="number" required id="tokenInitialSupply" name="tokenInitialSupply" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" placeholder="Enter initial supply">
            </div>
            <div>
                <label for="network" class="block text-sm font-medium text-gray-300">Solana Network <span class="text-gray-500"><a href="/auth" style="text-decoration: underline; color: rgb(93, 195, 255);">Change Here</a></span></label>
                <input type="text" required id="network" readonly name="network" autocomplete="off" class="mt-1 block w-full px-4 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-gray-700 text-white sm:text-sm transition-colors duration-300 ease-in-out" value="<%= network %>">
            </div>
            <div class="flex justify-between">
                <button type="submit" class="w-[48%] h-4 bg-blue-500 bg-opacity-50 backdrop-blur-lg text-white font-medium py-6 px-4 rounded text-center text-md flex items-center justify-center border border-blue-500 border-opacity-20 shadow-md hover:bg-opacity-20">
                Create Token
                </button>
                <a href="/guide" class="w-[48%] h-4 bg-yellow-500 bg-opacity-50 backdrop-blur-lg text-white font-medium py-6 px-4 rounded text-center text-md flex items-center justify-center border border-yellow-500 border-opacity-20 shadow-md hover:bg-opacity-20">
                    Check Guide
                </a>
            </div>
        </form>
    </div>
</div>

<script>
  document.getElementById('tokenForm').addEventListener('submit', function(event) {
    const solanaNetwork = document.getElementById('network').value;
    if (solanaNetwork === 'mainnet-beta') {
      const confirmation = confirm('You are about to create a token on the Mainnet which will charge you a low amount of SOL. Are you sure you want to proceed?');
      if (!confirmation) {
        event.preventDefault();
      }
    }
  });
</script>

<%- include("partials/footer") %>