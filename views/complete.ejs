<%- include("partials/header") %>

<div class="container mx-auto p-4 justify-center flex">
    <div class="bg-white bg-opacity-10 backdrop-blur-lg p-8 rounded-lg shadow-lg mt-6 w-full md:w-[800px] border border-white border-opacity-20 animate-fade-in">
        <h2 class="text-3xl font-bold text-white mb-6 text-center">Token Creation Complete</h2>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-300">Token URI:</label>
                <a class="mt-1 text-lg font-semibold text-blue-400 break-words" target="_blank" href="<%= tokenURI %>"><%= tokenURI %></a>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-300">Token Decimals:</label>
                <p class="mt-1 text-lg font-semibold text-green-400 break-words"><%= tokenDecimals %></p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-300">Initial Supply:</label>
                <p class="mt-1 text-lg font-semibold text-yellow-400 break-words"><%= tokenInitialSupply %></p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-300">Mint Address:</label>
                <p class="mt-1 text-lg font-semibold text-red-400 break-words"><%= mintAddress %></p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-300">Token Account Address:</label>
                <p class="mt-1 text-lg font-semibold text-purple-400 break-words"><%= fromTokenAccount %></p>
            </div>
        </div>
        <div class="mt-6 flex flex-col space-y-4">
            <a href="/create" class="inline-flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-500 bg-opacity-50 backdrop-blur-lg hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform transform">
                Create Another Token
            </a>
            <a href="<%- explorer + (solanaNetwork === 'devnet' ? '?cluster=devnet' : '') %>" target="_blank" class="inline-flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-500 bg-opacity-50 backdrop-blur-lg hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform transform">
                Check it on Explorer
            </a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<style>
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  
    .animate-fade-in {
      animation: fadeIn 1s ease-in-out;
    }
</style>